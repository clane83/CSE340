<h1>
    <%= title %>
</h1>

<form action="/inv/update" method="post" class="form">
    <input type="hidden" name="inv_id" value="<%= inv_id %>">

    <div class="field">
        <label for="classification_id">Classification</label>
        <%- classificationSelect %>
    </div>

    <div class="field">
        <label for="inv_make">Make</label>
        <input id="inv_make" name="inv_make" required value="<%= inv_make %>">
    </div>

    <div class="field">
        <label for="inv_model">Model</label>
        <input id="inv_model" name="inv_model" required value="<%= inv_model %>">
    </div>

    <div class="field">
        <label for="inv_year">Year</label>
        <input id="inv_year" name="inv_year" type="number" required value="<%= inv_year %>">
    </div>

    <div class="field">
        <label for="inv_price">Price</label>
        <input id="inv_price" name="inv_price" type="number" step="0.01" required value="<%= inv_price %>">
    </div>

    <div class="field">
        <label for="inv_miles">Miles</label>
        <input id="inv_miles" name="inv_miles" type="number" required value="<%= inv_miles %>">
    </div>

    <div class="field">
        <label for="inv_color">Color</label>
        <input id="inv_color" name="inv_color" value="<%= inv_color %>">
    </div>

    <div class="field">
        <label for="inv_description">Description</label>
        <textarea id="inv_description" name="inv_description" rows="4"><%= inv_description %></textarea>
    </div>

    <button type="submit" class="btn">Save Changes</button>
    <a href="/inv" class="btn btn-secondary">Cancel</a>
</form>