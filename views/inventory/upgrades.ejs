<% if (!item) { %>
    <h2>
        <%= title %>
    </h2>
    <p class="notice">No details to show.</p>
    <p><a href="javascript:history.back()">← Back</a></p>
    <% } else { %>
        <article class="upgrade-detail">
            <% const img=item.up_inv_image || item.up_inv_thumbnail; %>
                <% if (img) { %>
                    <img class="upgrade-img" src="<%= img %>" alt="Image of <%= item.up_inv_item %>">
                    <% } %>
                        <h2>
                            <%= title %> Details
                        </h2>
                        <ul class="specs">
                            <li><strong>Type:</strong>
                                <%= item.up_type %>
                            </li>
                            <li><strong>Price:</strong>
                                $<%= Number(item.up_inv_price).toLocaleString() %>
                            </li>
                        </ul>
                        <div class="desc">
                            <strong>Description: </strong>
                            <%= item.up_inv_description %>
                        </div>
                        <p><a href="javascript:history.back()">← Back</a></p>
        </article>
        <% } %>