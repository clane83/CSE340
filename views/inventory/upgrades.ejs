<% if (!item) { %>
    <h2>
        <%= title %>
    </h2>
    <p class="notice">No details to show.</p>
    <p><a href="javascript:history.back()">← Back</a></p>
    <% } else { %>
        <article class="upgrade-detail">
            <% const img=item.up_inv_image || item.up_inv_thumbnail; %>
                <% if (img) { %>
                    <img class="upgrade-img" src="<%= img %>" alt="Image of <%= item.up_inv_item %>">
                    <% } %>
                        <h2 class="upgrade-title">
                            <%= item.up_inv_item %>
                        </h2>
                        <p class="upgrade-type"><strong>Type:</strong>
                            <%= item.up_type %>
                        </p>
                        <p class="upgrade-price"><strong>Price:</strong> $<%= Number(item.up_inv_price).toLocaleString()
                                %>
                        </p>
                        <% if (item.up_inv_description) { %>
                            <p class="upgrade-desc">
                                <%= item.up_inv_description %>
                            </p>
                            <% } %>
                                <p><a href="javascript:history.back()">← Back</a></p>
        </article>
        <% } %>