<% /* Flash messages via express-messages (res.locals.messages) */ %>
    <% if (typeof messages==='function' ) { %>
        <div class="flash-container"><%- messages() %></div>
        <% } %>

            <% /* Fallback: if controller sends req.flash('notice', '...' ) */ %>
                <% if (typeof notice !=='undefined' && notice && notice.length) { %>
                    <div class="flash notice">
                        <%= notice[0] %>
                    </div>
                    <% } %>

                        <h1>
                            <%= title %>
                        </h1>

                        <form class="auth-form" action="/account/register" method="post" novalidate>
                            <div class="field">
                                <label for="account_firstname">First Name</label>
                                <input type="text" id="fname" name="fname" auto-complete="given-name"
                                    placeholder="First Name" required />
                            </div>
                            <div class="field">
                                <label for="account_lastname">Last Name</label>
                                <input type="text" id="lname" name="lname" auto-complete="family-name"
                                    placeholder="Last Name" required />
                            </div>
                            <div class="field">
                                <label for="account_email">Email address</label>
                                <input type="email" id="account_email" name="account_email" autocomplete="email"
                                    placeholder="you@example.com" required />
                            </div>

                            <div class="field">
                                <label for="account_password">Password</label>
                                <input type="password" id="account_password" name="account_password"
                                    autocomplete="new-password" placeholder="Your password" required />
                            </div>

                            <button class="btn" type="submit">Register</button>
                        </form>