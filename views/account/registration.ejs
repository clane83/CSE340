<% if (errors && errors.length) { %>
    <ul class="notice-acct">
        <% errors.forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
    <% } %>
        <h1>
            <%= title %>
        </h1>



        <form class="auth-form" action="/account/registration" method="post">
            <div class="field">
                <label for="account_firstname">First Name</label>
                <input type="text" id="account_firstname" name="account_firstname" auto-complete="given-name"
                    placeholder="First Name" required value="<%= locals.account_firstname %>">
            </div>
            <div class="field">
                <label for="account_lastname">Last Name</label>
                <input type="text" id="account_lastname" name="account_lastname" auto-complete="family-name"
                    placeholder="Last Name" required value="<%= locals.account_lastname %>">
            </div>
            <div class="field">
                <label for="account_email">Email address</label>
                <input type="email" id="account_email" name="account_email" autocomplete="email" required
                    placeholder="you@example.com" value="<%= locals.account_email %>">
            </div>

            <div class="field">
                <label for="account_password">Password</label>
                <span>Passwords must be at least 12 characters and contain at least 1 capital
                    letter, 1
                    lowercase letter, 1 number and 1 special character.</span>
                <input type="password" id="account_password" name="account_password" autocomplete="new-password"
                    placeholder="Your password" required
                    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
            </div>

            <button class="btn" type="submit">Register</button>
        </form>