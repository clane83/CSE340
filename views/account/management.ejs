<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

    <body>
        <div id="wrapper">

            <main class="account-management">
                <h1>
                    <%= title || 'Account Management' %>
                </h1>

                <% if (typeof notice !=='undefined' && notice && notice.length) { %>
                    <div class="notice">
                        <%= Array.isArray(notice) ? notice.join('<br>') : notice %>
                    </div>
                    <% } %>

                        <% if (typeof errors !=='undefined' && errors && errors.length) { %>
                            <ul class="errors">
                                <% errors.forEach(e=> { %>
                                    <li>
                                        <%= (e && e.msg) ? e.msg : e %>
                                    </li>
                                    <% }) %>
                            </ul>
                            <% } %>

                                <% const acct=(typeof account !=='undefined' && account) ? account : locals.account; %>

                                    <!-- Greeting required for all logged-in accounts -->
                                    <% if (acct) { %>
                                        <h2>Welcome <%= acct.account_firstname %>
                                        </h2>

                                        <p>
                                            <a href="/account/update/<%= acct.account_id %>">Update account
                                                information</a>
                                        </p>

                                        <% if (acct.account_type==='Employee' || acct.account_type==='Admin' ) { %>
                                            <h3>Inventory Management</h3>
                                            <p><a href="/inv/">Go to Inventory Management</a></p>
                                            <% } %>
                                                <% } %>
            </main>
        </div>

        <script src="/js/script.js"></script>
    </body>

</html>