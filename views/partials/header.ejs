<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>

    <div id="tools">
        <% if (loggedIn && account) { %>
            <a href="/account/management">Welcome <%= account.account_firstname %></a>
            <form action="/account/logout" method="post" style="display:inline; margin-left:.5rem">
                <button type="submit" class="linklike">Logout</button>
            </form>
            <% } else { %>
                <a href="/account/login">My Account</a>
                <% } %>
    </div>
</header>